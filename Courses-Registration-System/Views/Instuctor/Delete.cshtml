@model InstuctorViewModel

@{
    ViewBag.Title = "Instuctor Delete";
}

<a asp-controller="Instuctor" asp-action="Index" class="btn btn-primary">Back To Instuctor</a>

<style>
    /* Custom styles for checkboxes */
    .checkbox-container {
        display: block;
        margin-bottom: 10px;
    }

    .checkbox-label {
        display: inline-block;
        vertical-align: middle;
        margin-left: 5px;
    }

    .checkbox-input {
        vertical-align: middle;
    }

        .checkbox-input:checked + .checkbox-label {
            color: red;
        }
</style>
<h2>Delete Instuctor</h2>



<form asp-controller="Instuctor" asp-action="Delete" method="post" class="form-group">
    <input type="hidden" asp-for="InstructorId" />

    <label asp-for="InstructorName">Instuctor Name</label>
    <input type="text" asp-for="InstructorName" class="form-control" readonly />
    <br /><br />

    <label asp-for="InstructorEmail">Instuctor Email</label>
    <input type="email" asp-for="InstructorEmail" class="form-control" readonly />
    <br /><br />

    <label asp-for="PhoneNumber">Instuctor Phone</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" readonly />
    <br /><br />

    <label asp-for="BirthDate">Birth Date</label>
    <input type="date" asp-for="BirthDate" class="form-control" readonly />
    <br /><br 

     <div class="custom-control custom-checkbox">
        <input type="checkbox" asp-for="Gender" class="custom-control-input" readonly />
        <label class="custom-control-label" asp-for="Gender">Is Male : ? </label>
    </div>
    <span class="text-danger" asp-validation-for="Gender"></span>

    <br /><br />

    @if (Model.PhotoUrl != null)
    {
        <img src="~/Files/Photos/@Model.PhotoUrl" width="80px" height="80px" />
    }
    <input type="hidden" asp-for="IconFile" class="form-control" />
    <br /><br />


   
   

    <br />
    <center>
        <input type="submit" value="Delete" class="btn btn-primary" />
    </center>

</form>

<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


@model CourseViewModel

@{
    ViewData["Title"] = "Course Details";
}

<!-- TODO Course Details --> 
 
<h1>Course Details</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseId" />
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" hidden/>
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoursPrice" class="control-label"></label>
                <input asp-for="CoursPrice" class="form-control" hidden />
                <span asp-validation-for="CoursPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="IconFile" class="control-label"></label>
                    <input asp-for="IconFile" accept="image/*" class="form-control" hidden />
                    <img src="~/Files/Photos/@Model.IconUrl" style="width:120px" class="img-thumbnail" />
                </div>
            </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


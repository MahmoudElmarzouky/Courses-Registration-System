@model IEnumerable<Courses_Registration_System.Models.CourseWithScheduleViewModel>

@{
    ViewData["Title"] = "ActiveCourses";
}

<h1>ActiveCourses</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoursPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseIcon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoursPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                    @{
                        if (@item.CourseIcon != null)
                        {
                        <td>
                            <img alt="courseIcon" src="~/Files/Photos/@item.CourseIcon" width="80px" height="80px" />
                        </td>
                        }
                        else
                        {
                        <td>
                            <img alt="courseIcon" src="~/Files/Photos/defualtIcon.png" width="80px" height="80px" />
                        </td>
                        }
                    }
            </td>
\
        </tr>
}
    </tbody>
</table>
